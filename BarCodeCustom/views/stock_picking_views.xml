<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- vista que hereda del formulario de albaranes -->
    <record id="view_picking_form_inherit_barcode" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.barcode</field>
        <field name="model">stock.picking</field>
        <!-- indico de que vista voy a heredar -->
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- busco el campo product_id dentro de la pestaÃ±a de operaciones -->
            <!-- y pongo mi campo justo despues -->
            <xpath expr="//page[@name='operations']//field[@name='product_id']" position="after">
                <field name="product_barcode_scan" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
